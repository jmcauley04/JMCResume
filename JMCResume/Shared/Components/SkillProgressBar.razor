<div class="font-weight-bold" style="width: 100%;">
    <span class="text-uppercase">@SkillTitle</span><span style="float:right;">@PercentOfBar</span>
</div>

<svg height=20 class="accent" style="width:100%;">
    <line x1="0" y1="10" x2=@PercentOfBar y2="10" style="stroke-width:3;" />
    <line x1=@PercentOfBar y1="10" x2="100%" y2="10" style="stroke-width:2;" stroke="Gray" />
</svg>

@code {
    [Parameter]
    public int Percent { get; set; }

    [Parameter]
    public string SkillTitle { get; set; }

    string PercentOfBar => Percent > 100 ? "100%" : Percent < 0 ? "0%" : $"{Percent}%";
}
